{
  "name": "smshub-desktop",
  "version": "1.0.0",
  "description": "Desktop application for managing multiple USB modems for SMS processing",
  "main": "dist/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "webpack serve --config webpack.config.ts --hot",
    "dev:main": "tsc -p tsconfig.electron.json -w",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.config.ts",
    "build:main": "tsc -p tsconfig.electron.json",
    "rebuild": "electron-rebuild -f -w better-sqlite3,serialport",
    "package": "electron-builder",
    "package:dir": "electron-builder --dir",
    "package:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps && npm run rebuild",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "electron-builder -p always"
  },
  "build": {
    "appId": "com.smshub.desktop",
    "productName": "SMSHub Manager",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/plugins",
        "to": "plugins",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@mdi/font": "^7.3.67",
    "@serialport/bindings-cpp": "^12.0.1",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.0.0",
    "chart.js": "^4.4.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "serialport": "^12.0.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.2.0",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.4",
    "vuex": "^4.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.17.6",
    "@types/serialport": "^8.0.5",
    "@types/vue": "^2.0.0",
    "@types/webpack": "^5.28.5",
    "@types/webpack-env": "^1.18.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.19.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vue-loader": "^17.3.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
